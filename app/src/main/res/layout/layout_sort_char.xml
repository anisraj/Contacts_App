<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sort_char_bg">

    <TextView
        android:id="@+id/tvSortChar"
        style="@style/SortText.PrimaryText.RalewayBold"
        android:paddingStart="@dimen/search_view_margin"
        android:paddingEnd="@dimen/search_view_margin"
        android:paddingTop="@dimen/sort_char_top_padding"
        android:paddingBottom="@dimen/sort_char_top_padding"
        android:textAllCaps="true"
        tools:text="@string/capital_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>